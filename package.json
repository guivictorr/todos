{
	"name": "todos",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"prepare": "husky install",
		"commit": "cz"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-conventional": "^16.2.4",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.4.1",
		"prettier": "^2.5.1",
		"turbo": "^1.2.6"
	},
	"lint-staged": {
		"apps/**/*.{ts,tsx,js,jsx}": [
			"eslint --fix"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
