{
	"name": "todos-api",
	"version": "0.0.0",
	"main": "src/index.ts",
	"author": "guivictorr <55333929+guivictorr@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"lint": "eslint --fix .",
		"dev": "yarn docker-dev:up && yarn migrate:dev && dotenv -e .env.development ts-node src/index.ts --transpile-only",
		"migrate:dev": "dotenv -e .env.development yarn prisma migrate dev",
		"docker-dev:up": "docker-compose up -d db_dev",
		"migrate:test": "dotenv -e .env.test yarn prisma migrate dev",
		"docker-test:down": "docker-compose stop db_test && docker-compose rm -f db_test",
		"docker-test:up": "docker-compose up -d db_test",
		"test:run": "dotenv -e .env.test jest -i",
		"test": "yarn docker-test:down && yarn docker-test:up && yarn migrate:test && yarn test:run && yarn docker-test:down"
	},
	"dependencies": {
		"@prisma/client": "^3.10.0",
		"bcrypt": "^5.0.1",
		"express": "^4.17.3",
		"express-async-errors": "^3.1.1",
		"jsonwebtoken": "^8.5.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^17.0.21",
		"@types/supertest": "^2.0.11",
		"dotenv-cli": "^5.1.0",
		"eslint": "^8.10.0",
		"jest": "^27.5.1",
		"prisma": "^3.10.0",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5",
		"@packages/tsconfig": "*",
		"@packages/config": "*"
	}
}
